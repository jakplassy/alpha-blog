<div id="page-content">
  <h1 class="text-center">All Articles</h1>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header">
              <i>by Jake Plassmeyer</i>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <%= link_to 'View', article_path(article), class: 'btn btn-outline-success' %>
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-primary' %>
              <%= link_to 'Delete', article_path(article), method: :delete, data:  {confirm: "Are You Sure You Want To Delete?"}, class: 'btn btn-outline-danger' %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, last updated <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to 'Go Home', root_path, class: "btn btn-primary" %>
    <br><br>
    <%= link_to 'Create New Article', new_article_path, class: "btn btn-success mb-5" %>
  </div>
</div>
